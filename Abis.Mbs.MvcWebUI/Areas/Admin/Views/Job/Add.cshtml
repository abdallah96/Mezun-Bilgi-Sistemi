@model Abis.Mbs.MvcWebUI.Areas.Admin.Models.JobAddViewModel
@{
    ViewData["Title"] = "AddJob";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>AddJob</h1>

<div class="main-content">
    <div class="container-fluid">
        <div class="panel panel-headline">
            <div class="panel-heading">
                <h3 class="panel-title">Meslek Listesi-> Admin Panel </h3>

            </div>
            <div class="panel-body">

                <form asp-area="Admin" asp-controller="Job" asp-action="Add" method="post">
                    <div class="form-group">
                        <label asp-for="Job.Department"></label>
                        <input asp-for="Job.Department" class="form-control" placeholder="Post " />
                        <span asp-validation-for="Job.Department"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Job.WorkType"></label>
                        <input asp-for="Job.WorkType" class="form-control" placeholder="Area" />
                        <span asp-validation-for="Job.WorkType"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Job.Position"></label>
                        <input asp-for="Job.Position" class="form-control" placeholder="Country" />
                        <span asp-validation-for="Job.Position"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Job.Date" class="control-label">Date</label>
                        <input asp-for="Job.Date" class="form-control" />
                        <span asp-validation-for="Job.Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Job.Education"></label>
                        <input asp-for="Job.Education" class="form-control" placeholder="Education" />
                        <span asp-validation-for="Job.Education"></span>
                    </div>

                    <div class="text-center">
                        <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalLoginForm">
                            Add Company
                        </a>
                    </div>

                    <div class="form-group">
                        <label asp-for="Companies"></label>
                        <select class="browser-default custom-select custom-select-lg mb-3" searchable="Search here.." asp-for="Job.CompanyID" asp-items="@(new SelectList(Model.Companies,"CompanyID","CompanyName"))">
                            <option value="" disabled selected>Choose your department</option>
                        </select>
                        <span asp-validation-for="Job.CompanyID"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Job.Experience"></label>
                        <input asp-for="Job.Experience" class="form-control" placeholder="City" />
                        <span asp-validation-for="Job.Experience"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Job.Description"></label>
                        <input asp-for="Job.Description" class="form-control" placeholder="City" />
                        <span asp-validation-for="Job.Description"></span>
                    </div>*@
                    <div class="form-group">
                        <label asp-for="Job.EducationLevel"></label>
                        <input asp-for="Job.EducationLevel" class="form-control" placeholder="City" />
                        <span asp-validation-for="Job.EducationLevel"></span>
                    </div>


                    <input type="submit" value="AddJob" class="btn btn-xs btn-success" />

                </form>
            </div>
        </div>
    </div>
</div>
<form asp-area="Admin" asp-controller="Company" asp-action="Add" method="post">
    <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true" style="opacity:1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Sign in</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">

                    <div class="md-form mb-5">
                        <label asp-for="Company.CompanyName"></label>
                        <input asp-for="Company.CompanyName" class="form-control" placeholder="Post " />
                        <span asp-validation-for="Company.CompanyName"></span>
                    </div>

                    <div class="md-form mb-4">
                        <label asp-for="Company.City"></label>
                        <input asp-for="Company.City" class="form-control" placeholder="City" />
                        <span asp-validation-for="Company.City"></span>
                    </div>

                    <div class="md-form mb-3">
                        <label asp-for="Company.Adress"></label>
                        <input asp-for="Company.Adress" class="form-control" placeholder="Address" />
                        <span asp-validation-for="Company.Adress"></span>
                    </div>

                    <div class="md-form mb-2">
                        <label asp-for="Company.Phone"></label>
                        <input asp-for="Company.Phone" class="form-control" placeholder="Phone Number" />
                        <span asp-validation-for="Company.Phone"></span>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <input type="submit" value="Add" class="btn btn-xs btn-success" />
                </div>
            </div>
        </div>
    </div>
</form>


