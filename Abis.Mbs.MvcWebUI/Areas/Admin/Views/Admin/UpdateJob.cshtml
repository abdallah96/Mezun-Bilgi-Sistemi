@model Abis.Mbs.MvcWebUI.Areas.Admin.Models.JobUpdateViewModel
@{
    ViewData["Title"] = "UpdateJob";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h1>Update job</h1>
@if (TempData["updatejobmessage"] != null)
{
    <div class="alert alert-success">@TempData["success"];</div>
}

    <form asp-controller="Admin" asp-area="Admin" asp-action="UpdateJob" method="post">
        <div class="form-group">
            <label asp-for="Job.Department"></label>
            <input asp-for="Job.Department" class="form-control" placeholder="Post " />
            <span asp-validation-for="Job.Department"></span>
        </div>
        <div class="form-group">
            <label asp-for="Job.WorkType"></label>
            <input asp-for="Job.WorkType" class="form-control" placeholder="Area" />
            <span asp-validation-for="Job.WorkType"></span>
        </div>
        <div class="form-group">
            <label asp-for="Job.Position"></label>
            <input asp-for="Job.Position" class="form-control" placeholder="Country" />  
            <span asp-validation-for="Job.Position"></span>
        </div>
        <div class="form-group">
            <label asp-for="Job.City"></label>
            <input asp-for="Job.City" class="form-control" placeholder="City" />
            <span asp-validation-for="Job.City"></span>
        </div>

        <input type="hidden" asp-for="Job.JobID" />
        <input type="submit" value="Update" class="btn btn-xs btn-success" />

    </form>