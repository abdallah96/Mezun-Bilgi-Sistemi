@model Abis.Mbs.MvcWebUI.Areas.User.Models.AnnouncementListViewModel
@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}







<!-- MAIN CONTENT -->
<div class="main-content">
    <div class="container-fluid">
        <!-- OVERVIEW -->
        <div class="panel panel-headline">
            <div class="panel-heading">
                <h3 class="panel-title">Duyuru Listesi-> Admin Panel </h3>

            </div>
            <div class="panel-body">


                <div class="container">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-8"><h2>Duyuru <b>Listesi</b></h2></div>

                            </div>
                        </div>

                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>

                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var announcement in Model.Announcements)
                                {

                                    <tr>
                                        <td>@announcement.ATitle</td>
                                        <td>@announcement.ADescription</td>
                                        <td>@Html.DisplayFor(modelItem => announcement.ACreateDate)</td>



                                        @*<td><img src="@Url.Content(announcement.APhoto)" width="250" height="250"/> </td>*@

                                        <td>
                                            <a class="edit" asp-area="Admin" asp-controller="Announcement" asp-action="Update" asp-route-announcementId="@announcement.AnnouncementId" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                            <a class="delete" asp-area="Admin" asp-controller="Announcement" asp-action="Delete" asp-route-announcementId="@announcement.AnnouncementId" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END OVERVIEW -->

            </div>
        </div>
    </div>
</div>