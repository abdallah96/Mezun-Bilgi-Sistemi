@using System.Threading.Tasks
@using Abis.Mbs.MvcWebUI.Models
@model Abis.Mbs.MvcWebUI.Areas.Admin.Models.AnnouncementAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<!-- MAIN CONTENT -->
<div class="main-content">
    <div class="container-fluid">
        <!-- OVERVIEW -->
        <div class="panel panel-headline">
            <div class="panel-heading">
                <h3 class="panel-title">Duyuru Ekle-> Admin Panel </h3>

            </div>
            <div class="panel-body">
                <form asp-controller="Announcement" asp-area="Admin" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Announcement.ATitle">Title</label>
                        <input asp-for="Announcement.ATitle" class="form-control" placeholder="Announcement Title" />
                        <span asp-validation-for="Announcement.ATitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Announcement.ADescription">Description</label>
                        <input asp-for="Announcement.ADescription" class="form-control" placeholder="Announcement Description" />
                        <span asp-validation-for="Announcement.ADescription"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Announcement.ACreateDate" class="control-label">Date</label>
                        <input asp-for="Announcement.ACreateDate" class="form-control" />
                        <span asp-validation-for="Announcement.ACreateDate" class="text-danger"></span>
                    </div>


                    <input type="submit" value="Add" class="btn btn-xs btn-success" />

                </form>
            </div>
        </div>
        <!-- END OVERVIEW -->

    </div>
</div>
