@model Abis.Mbs.MvcWebUI.Areas.Admin.Models.DepartmentAddModel

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="main-content">
    <div class="container-fluid">
        <!-- OVERVIEW -->
        <div class="panel panel-headline">
            <div class="panel-heading">
                <h3 class="panel-title">Bölüm Düzenle-> Admin Panel </h3>

            </div>
            <div class="panel-body">
                <form asp-controller="Department" asp-area="Admin" asp-action="Update" method="post">
                    <div class="form-group">
                        <label asp-for="Department.DepartmentName"></label>
                        <input asp-for="Department.DepartmentName" class="form-control" placeholder="Department Name" />
                        <span asp-validation-for="Department.DepartmentName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Department.Amount"></label>
                        <input asp-for="Department.Amount" class="form-control" placeholder="Amount" />
                        <span asp-validation-for="Department.Amount"></span>
                    </div>
                 

                    <input type="hidden" asp-for="Department.DepId" />
                    <input type="submit" value="Update" class="btn btn-xs btn-success" />

                </form>
            </div>
        </div>
    </div>
</div>