            <div class="col-md-6">
                <!-- Material input -->
                <div class="md-form form-group">
                    <label asp-for="JobForm.PhoneNumber">Telefon</label>
                    <input type="text" asp-for="JobForm.PhoneNumber" class="form-control" placeholder="Phone Number " />
                    <span asp-validation-for="JobForm.PhoneNumber"></span>
                </div>
            </div>*@
